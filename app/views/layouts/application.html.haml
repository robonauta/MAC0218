!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    / Bootstrap CSS

    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"}
    %script{:src => "//netdna.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"}
    %link{:crossorigin => "anonymous", :href => "https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css", :integrity => "sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB", :rel => "stylesheet"}


    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css", :rel => "stylesheet"}

    

    %title Dontpanic
    = csrf_meta_tags
    /= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    /= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'

    
  %body
    %nav.navbar.fixed-top.navbar-expand-md.navbar-light.bg-faded
      %a.navbar-brand{:href => "/"} Monolito
      %button.navbar-toggler.navbar-toggler-right{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        %ul.navbar-nav
          %li.nav-item
            %a.nav-link{:href => "/"} Home
          %li.nav-item
            %a.nav-link{:href => "/about"} Sobre
          %li.nav-item
            %a.nav-link{:href => "/contact"} Contato
        %form.form-inline.mr-auto
          %input.form-control.mr-sm-2{:placeholder => "Procure um projeto", :type => "search"}/
          %button.btn.btn-light.my-2.my-sm-0{:type => "submit"} Pesquisar
        %ul.navbar-nav.navbar-right          
          - if current_user
            %li.nav-item
              %a.nav-link{:href => "/posts/new"} Novo projeto
            %li.nav-item
              %a.nav-link{:href => "/dashboard"} Dashboard
            %li.nav-item.dropdown
              %a#navbarDropdownMenuLink.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "javascript:void(0)"} 
                =current_user.username
              .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "navbarDropdownMenuLink"}
                %a.dropdown-item{:href =>  "/show"} Meu perfil 
                .dropdown-divider
                %a.dropdown-item{:href => "javascript:void(0)"} 
                  = link_to("Sair", logout_path, :method => :delete)
          - else
            %li.nav-item
              %a.nav-link{:href => "/login"} Entre
      / /.navbar-collapse
      
    = yield
