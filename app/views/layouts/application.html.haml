!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %title Monolito
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = favicon_link_tag '/images/favicon.ico'
    
  %body
    %nav.navbar.fixed-top.navbar-expand-md.navbar-light.bg-faded
      %a.navbar-brand{:href => "/"} Monolito
      %button.navbar-toggler.navbar-toggler-right{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        %ul.navbar-nav
          %li.nav-item
            %a.nav-link{:href => "/about"} Sobre
          %li.nav-item
            %a.nav-link{:href => "/contact"} Contato
        %form.form-inline.mr-auto
          
        %ul.navbar-nav.navbar-right          
          - if current_user
            %li.nav-item
              %a.nav-link{:href => "/projects/new"} Novo projeto
            %li.nav-item.dropdown
              %a#navbarDropdownMenuLink.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "javascript:void(0)"} 
                =current_user.username
              .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "navbarDropdownMenuLink"}
                %a.dropdown-item{:href =>  "/account"} Meu perfil 
                .dropdown-divider
                %a.dropdown-item{:href =>  "/myprojects"} Meus projetos 
                .dropdown-divider
                .text-center
                  %a.dropdown-item{:href => "javascript:void(0)"} 
                    = link_to("Sair", logout_path, :method => :delete)
          - else
            %li.nav-item
              %a.nav-link{:href => "/login"} Entre
      / /.navbar-collapse
    %canvas#stars
    #container.cover-container.d-flex.w-100.h-100.p-3.mx-auto.flex-column.text-light.scroll-y
      %header.masthead.mb-auto
        .inner          
      %main.inner.cover{:role => "main"}
      = yield
      %footer.mastfoot.mt-auto
        .inner
