%h2= @post.title
%h5= @post.author
%p= @post.description
%hr
- if @show_edit
  = link_to "Edit", edit_post_path(@post), :class => 'btn btn-default'
  = link_to "Delete", post_path(@post), 
                      method: :delete, data: { confirm: 'Are you sure?' },
                      :class => 'btn btn-danger'
            