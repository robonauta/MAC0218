%main{:role => "main"}
  .album.py-5
    .container
      .row
        - @projects.each do |project|
          .col-md-4
            .card.mb-4.box-shadow
              /= image_tag(@image.file, alt: "Imagem da pergunta", class: 'img-fluid', style: 'height:auto;width:600px;' )
              %img.card-img-top{:alt => "Card image cap", "data-src" => "holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail"}/
              .card-body.text-dark
                %p.card-text= project.name
                %p.card-text= project.user_id
                .d-flex.justify-content-between.align-items-center
                  .btn-group
                    %button.btn.btn-sm.btn-outline-secondary{:type => "button"}= link_to "Recuperar dados", "#"
                  %small.text-muted 9 mins                  
              
