.card-trans.wide
  = form_for :project, :url => {:controller => 'projects', :action => 'create'} do |f|
    %h1.text-center Novo projeto
    %label.sr-only{:for => "name"} Título            
    = f.text_field :name, class: 'form-control', :placeholder => "Título", :required => ""
    %label.sr-only{:for => "description"} Descrição curta do conjunto de imagens
    = f.text_area :description, class: 'form-control', :placeholder => "Descrição (opcional)"
    .image-upload
      = f.file_field :files, :id => "files", multiple: true, class: 'form-control', :placeholder => "Imagens", :required => ""
    .text-center
      .card-trans
        %label{:for => "files"} 
          %i.fa.fa-file.fa-5x
    %br

    %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Continuar
      
